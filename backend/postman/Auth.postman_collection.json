{
  "info": {
    "_postman_id": "fined-mentor-auth-collection",
    "name": "Fined Mentor - Auth",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080"
    },
    {
      "key": "activationToken",
      "value": ""
    },
    {
      "key": "jwtToken",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"testuser@example.com\",\n  \"password\": \"password123\",\n  \"firstName\": \"Test\",\n  \"lastName\": \"User\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/register",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "register"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"usernameOrEmail\": \"testuser\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "login"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Save JWT token to environment variable if login succeeded",
              "if (pm.response.code === 200) {",
              "  var json = pm.response.json();",
              "  if (json && json.data && json.data.token) {",
              "    pm.environment.set('jwtToken', json.data.token);",
              "    console.log('Saved jwtToken');",
              "  } else {",
              "    console.log('No token found in response data');",
              "  }",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "response": []
    },
    {
      "name": "Activate (use token)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"token\": \"{{activationToken}}\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/activate",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "activate"
          ]
        }
      },
      "response": []
    },
    {
      "name": "Resend Activation",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/auth/resend-activation?email=testuser@example.com",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "resend-activation"
          ],
          "query": [
            {
              "key": "email",
              "value": "testuser@example.com"
            }
          ]
        }
      },
      "response": []
    }
  ]
}
